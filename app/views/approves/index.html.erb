
<h2 class="text-center">You Received The Following Requests</h2>
<br/><br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr class="text-center">
      <th>User Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr class="text-center">
        <td><%= request.requester.name %></td>
        <td><%= request.requester.email %></td>
        <td>
          <div class="d-grid gap-2 d-md-flex profile-buttons">
              <%= button_to "Approve Request", approfe_path(request.id), method: :put , class: "btn btn-success" %>
              <%= button_to "Delete Request", approfe_path(request.id), method: :delete , class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
