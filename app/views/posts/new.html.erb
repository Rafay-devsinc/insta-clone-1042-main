
<%= form_with model: @post, url: posts_path , method: :post, local: true, validate: true do |form| %>

  <div class="field form-group">
    <%= form.text_field :caption,  placeholder:"Caption", required: true, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.file_field :images, multiple: true, placeholder:"Select Image or Images",required: true, class:"form-control" ,accept:'image/*' %>
  </div>

  <div class="field form-group">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>

