
<h2>Details of USER</h2>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Info</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
        <td>
          <%= render 'home/follower_count', user: @user %>
          <div><%= @user.followees.count %> following</div>
        </td>
        <td>
          <% if @user == current_user %>
            <%= link_to "Edit Profile" ,  edit_user_registration_path , class: 'btn btn-info'%>
          <% elsif @user.public? %>
            <%= render partial: 'home/follow_button', user: @user %>
          <% elsif current_user %>
            <%= render partial: 'requests/request_button', user: @user %>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>
