<div class="container" >
  <div class="row" >
    <div class="col-8 text-left" >
      <% @posts.each do |post| %>
        <div class="insta-post">
          <div class="post-meta">
            <div class="row" >
              <div class="col-1" >
                <% if post.user.avatar.attached? %>
                  <%= image_tag(post.user.avatar, class:"rounded-circle  profile-nav-post") %>
                <% end %>
              </div>
              <div class="col-4" >
                <%= post.user.name %>
              </div>
            </div>
          </div>

          <% if post.images.count == 1 %>
            <%= image_tag(post.images.first, :class => "img img-fluid ") %>
            <% else %>
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
              <div class="carousel-inner">
                  <% post.images.each do |img|  %>
                    <% if img.equal? post.images.first %>
                      <div class="carousel-item active">
                        <%= image_tag(img, :class => "img-fluid d-block w-100") %>
                      </div>
                      <%else%>
                      <div class="carousel-item">
                        <%= image_tag(img, :class => "img-fluid d-block w-100") %>
                      </div>
                    <%end%>

                  <% end %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>

          <% end %>

          <div class="post-details" >
            <div class="post-actions">
              <div class="row">
                <div class="col-1">
                  <div id="like-icon-post-<%= post.id.to_s %>">
                    <%= render "posts/like_icon", {is_liked: post.is_liked(current_user), post: post} %>
                  </div>
                </div>
                <div class="col-5">
                  <%= link_to "Comment" ,post_comments_path(post.id), method: :get , class:'btn btn-sm btn-info' %>
                </div>
              </div>
              <%# <i id="like-button" class="fa fa-heart fa-2x post-like" data-id="<%= post.id  %>
              <%# <i class="fa fa-comment fa-2x   post-comment"></i> %>
            </div>

            <div id="like-text-post-<%= post.id.to_s %>">
              <%= render 'posts/like_text', post: post %>
            </div>
            <p> <strong> <%= post.user.name %> </strong>  </p>
            <%= simple_format post.caption%>
            <p class="text-muted"> <%= time_ago_in_words post.created_at %> ago</p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-4" >
      <div class="account-summary" >
        <p>
          <%= image_tag(current_user.avatar, class:"profile-image-pic img-thumbnail rounded-circle  profile-nav-pic") if current_user.avatar.attached?  %>
          <strong> <%= current_user.name%> </strong>
        </p>
      </div>
      <div class="followers-suggestions" >
        <%= link_to "View All", "#", class: "float-right zzz text-dark" %>
        <p class="text-muted">Suggestions for you</p>
      </div>
    </div>
  </div>
</div>


